# Обязательные ключи X (Twitter). Нужна подписка с доступом на запись (Elevated/Pro/Enterprise).
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Альтернативные имена (если хотите): X_API_KEY, X_API_SECRET, X_ACCESS_TOKEN, X_ACCESS_SECRET

# Тема (подставляется в {topic} внутри контента)
TOPIC=крипторынок

# Часовой пояс для дат и временных окон
TIMEZONE=Europe/Riga

# Необязательно: добавлять ли дату в конец поста
ADD_DATE=true

# Необязательно: один общий хэштег без # (например: crypto)
ADD_HASHTAG=

# Необязательно: окно времени (локальное), в которое разрешено публиковать.
# Пример: только с 09:00 до 12:00
RUN_WINDOW_START=09:00
RUN_WINDOW_END=12:00
